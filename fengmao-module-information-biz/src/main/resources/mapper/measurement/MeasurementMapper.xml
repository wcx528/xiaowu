<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.fmyd888.fengmao.module.information.dal.mysql.measurement.MeasurementMapper">

    <!--
        一般情况下，尽可能使用 Mapper 进行 CRUD 增删改查即可。
        无法满足的场景，例如说多表关联查询，才使用 XML 编写 SQL。
        代码生成器暂时只生成 Mapper XML 文件本身，更多推荐 MybatisX 快速开发插件来生成查询。
        文档可见：https://www.iocoder.cn/MyBatis/x-plugins/
     -->
     <select id="selectByPage" resultType="com.fmyd888.fengmao.module.information.controller.admin.measurement.vo.MeasurementRespVO">
        SELECT
        t1.id,
        t1.code,
        t1.name,
        t1.parent_id,
        t1.status,
        t1.create_time,
        t1.update_time,
        t1.creator,
        t1.updater
        FROM fm_measurement t1
        left join fm_measurement_dept t2 on t1.id = t2.entity_id and t2.deleted = 0
        <where>
            t1.deleted = 0
            <if test="pageReqVO.deptId != null and pageReqVO.deptId != ''">
                AND t2.dept_id = #{pageReqVO.deptId}
            </if>
            <if test="pageReqVO.name != null and pageReqVO.name != ''">
                AND t1.name = #{pageReqVO.name}
            </if>
            <if test="pageReqVO.code != null and pageReqVO.code != ''">
                AND t1.code = #{pageReqVO.code}
            </if>
            <if test="pageReqVO.status != null">
                AND t1.status = #{pageReqVO.status}
            </if>
        </where>
        GROUP BY t1.id,
            t1.code,
            t1.name,
            t1.parent_id,
            t1.status,
            t1.create_time,
            t1.update_time,
            t1.creator,
            t1.updater
    </select>
</mapper>
