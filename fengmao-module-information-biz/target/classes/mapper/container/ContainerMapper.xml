     -->
    <!-- 根据 orderByColumn 和 sortMode 是否有值来选择的排序字段和排序方式
    注意传入参数对象别名(pageReqVO)或者表别名(t1)！！！
    -->
    <select id="selectByPage" resultType="com.fmyd888.fengmao.module.information.controller.admin.container.vo.ContainerRespVO">
        SELECT
        t1.id,
        t1.container_number,
        t1.status,
        t1.remark,
        t1.file_url,
        t1.create_time,
        t1.update_time,
        t1.creator,
        t1.updater
        FROM fm_container t1
        <where>
            t1.deleted = 0
            <if test="pageReqVO.deptId != null and pageReqVO.deptId != ''">
                AND t2.dept_id = #{pageReqVO.deptId}
            </if>
            <if test="pageReqVO.containerNumber != null and pageReqVO.containerNumber != ''">
                AND t1.container_number = #{pageReqVO.containerNumber}
            </if>
            <if test="pageReqVO.status != null">
                AND t1.status = #{pageReqVO.status}
            </if>
            <if test="pageReqVO.remark != null and pageReqVO.remark != ''">
                and t1.remark like concat('%',#{pageReqVO.remark},'%')
            </if>
        </where>
        group by t1.id,
            t1.container_number,
            t1.status,
            t1.remark,
            t1.file_url,
            t1.create_time,
            t1.update_time,
            t1.creator,
            t1.updater

    </select>


